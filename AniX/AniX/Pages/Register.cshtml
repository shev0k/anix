@page
@model AniX_WEB.Pages.RegisterModel
@{
    Layout = "_LoginLayout";
}
<!--=====================================-->
<!--=        login Area Start          =-->
<!--=====================================-->
<div class="login">
    <video autoplay loop muted class="bg-video">
        <source src="assets/media/login/login.mp4" type="video/mp4">
    </video>
    <section class="login signup text-center">
        <div class="container">
            <div class="login-block">
                <div class="login-content">
                    <img src="assets/media/icon/user.png" alt="" draggable="false"  class="user-icon">
                    <h3>Sign up</h3>
                    <form method="post">
                        @if (TempData["Message"] != null)
                        {
                            <div class="alert alert-info">
                                @TempData["Message"]
                            </div>
                        }
                        <div class="form-group">
                            <input class="form-control" type="text" name="username" required placeholder="username">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="email" name="email" required placeholder="email address">
                        </div>
                        <div class="form-group password-type-field mb-0">
                            <input class="form-control" type="password" id="password-field" name="password" required placeholder="enter password">
                            <span class="text-end toggle-password" toggle="#password-field"> <i class="fal fa-eye field-icon toggle-password"></i></span>
                        </div>
                        <div class="form-group password-type-field mb-0">
                            <input class="form-control" type="password" id="confirm-password" name="ConfirmPassword" required placeholder="confirm password">
                            <span class="text-end toggle-password" toggle="#confirm-password"> <i class="fal fa-eye field-icon toggle-password"></i></span>
                        </div>
                        <p class="policy">By continuing, you agree to AniX <a style="font-size: 15px; font-weight: bold;" href="./comments.html">Terms of Use</a> and <a style="font-size: 15px; font-weight: bold;" href="./privacy.html">Privacy Policy</a>.</p>
                        <button type="submit" class="anime-btn btn-dark border-change">
                            SIGN UP
                        </button>
                    </form>
                    <p class="guide">Already have an account? <a href="./login">Log in</a></p>
                </div>
            </div>
        </div>
    </section>
</div>

@if (!String.IsNullOrEmpty(Model.Message))
{
    <script>
        var serverMessage = "@Model.Message";
    </script>
}